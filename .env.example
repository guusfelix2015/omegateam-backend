# Environment Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://lineage_user:lineage_password@localhost:5432/lineage_db

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info

# Contabo Object Storage (S3-compatible)
CONTABO_ACCESS_KEY_ID=your-contabo-access-key-id
CONTABO_SECRET_ACCESS_KEY=your-contabo-secret-access-key
CONTABO_BUCKET_NAME=lineage-cp-omega
CONTABO_REGION=us-central-1
CONTABO_ENDPOINT=https://usc1.contabostorage.com
